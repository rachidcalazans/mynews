<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp" >

    <LinearLayout
        android:id="@+id/linearLayoutTopicHeaderImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgTopicHeaderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Topic Header Image"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTopicDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/linearLayoutTopicHeaderImage"
        android:text="Topic Display Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtTopicPublicDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTopicDisplayName"
        android:layout_toRightOf="@id/linearLayoutTopicHeaderImage"
        android:text="Topic Public Description"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>